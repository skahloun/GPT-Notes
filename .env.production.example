# Production Environment Configuration
# Copy this file to .env.production and fill in your values

# Server Configuration
NODE_ENV=production
PORT=6001

# Database Configuration (PostgreSQL for production)
DATABASE_URL=postgresql://username:password@localhost:5432/classnotes

# Security
JWT_SECRET=your-secure-jwt-secret-here
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_TRANSCRIBE_LANGUAGE_CODE=en-US

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/google/callback

# Application URLs
APP_URL=https://yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# SSL Configuration (if handling SSL in Node.js)
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000

# Storage Configuration
TRANSCRIPTS_PATH=./transcripts
MAX_FILE_SIZE=104857600

# Cost Tracking
ENABLE_COST_RECONCILIATION=true
COST_RECONCILIATION_HOUR=2