# Rename this file to .env and fill in the values.
PORT=6001
JWT_SECRET=change-me-in-production-use-a-secure-random-string

# Admin Portal Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_TRANSCRIBE_LANGUAGE_CODE=en-US
AWS_TRANSCRIBE_VOCAB_NAME= # optional: name of custom vocabulary
AWS_TRANSCRIBE_LANGUAGE_MODEL= # optional: name of custom language model

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Google OAuth (Web application credentials)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:6001/auth/google/callback

# AssemblyAI (optional fallback)
ASSEMBLYAI_API_KEY=your-assemblyai-api-key-if-using
USE_ASSEMBLYAI_FALLBACK=false

# Database Configuration
DATABASE_URL=sqlite:./class-notes.db
# For production PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/classnotes

# PayPal Configuration
# For Sandbox (testing):
